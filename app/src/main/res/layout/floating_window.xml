<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Console ä¸»é¢æ¿ -->
    <LinearLayout
        android:id="@+id/layoutMainPanel"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="gone"
        android:elevation="12dp">

        <!-- Console æ ‡é¢˜æ  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#2D2D30"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ” Element Inspector Console"
                android:textSize="12sp"
                android:textColor="#CCCCCC"
                android:gravity="center_vertical"
                android:fontFamily="monospace" />

            <ImageButton
                android:id="@+id/btnMinimize"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:scaleType="fitCenter"
                android:tint="#CCCCCC" />

        </LinearLayout>

        <!-- Console å·¥å…·æ  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#2D2D30"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnDetect"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginRight="4dp"
                android:text="Scan"
                android:textSize="10sp"
                android:textColor="#00FF00"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#3C3C3C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClick"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Click"
                android:textSize="10sp"
                android:textColor="#00BFFF"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#3C3C3C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSwipe"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:text="Swipe"
                android:textSize="10sp"
                android:textColor="#FFD700"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#3C3C3C"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:text="Settings"
                android:textSize="10sp"
                android:textColor="#FF6B6B"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#3C3C3C"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Console æœç´¢æ  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:background="#252526"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter:"
                android:textSize="10sp"
                android:textColor="#569CD6"
                android:fontFamily="monospace"
                android:layout_marginRight="8dp" />

            <EditText
                android:id="@+id/etSearchKeyword"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:hint="Search elements..."
                android:textColorHint="#666666"
                android:textSize="10sp"
                android:textColor="#CCCCCC"
                android:fontFamily="monospace"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:text="Go"
                android:textSize="9sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#007ACC" />

        </LinearLayout>

        <!-- Console è¾“å‡ºåŒºåŸŸ -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#1E1E1E"
            android:scrollbars="vertical"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/tvDetectionResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[INFO] Element Inspector Console initialized\n[DEBUG] Waiting for scan command..."
                android:textSize="10sp"
                android:textColor="#00FF00"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:lineSpacingExtra="1dp"
                android:textIsSelectable="true" />

        </ScrollView>

        <!-- Console çŠ¶æ€æ  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:background="#007ACC"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ready"
                android:textSize="9sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvElementCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elements: 0"
                android:textSize="9sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />

        </LinearLayout>

    </LinearLayout>

    <!-- Console æµ®åŠ¨æŒ‰é’® -->
    <ImageButton
        android:id="@+id/btnFloatingMain"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="#007ACC"
        android:src="@android:drawable/ic_search_category_default"
        android:scaleType="fitCenter"
        android:tint="#FFFFFF"
        android:elevation="8dp" />

</RelativeLayout> 